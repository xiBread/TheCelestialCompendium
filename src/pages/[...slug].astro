---
import type { GetStaticPaths } from "astro";
import { getCollection, getEntries } from "astro:content";
import type { MixedEntry } from "../content/config";
import Layout from "../layouts/Layout.astro";

interface Props {
	entry: MixedEntry;
}

export const getStaticPaths: GetStaticPaths = async () => {
	const all = await Promise.all([
		getCollection("archive"),
		getCollection("research"),
		getCollection("beastiary"),
	]);

	return (all.flat() as MixedEntry[]).map((entry) => {
		const slug =
			entry.slug === "index" ? entry.collection : `${entry.collection}/${entry.slug}`;

		return {
			params: { slug },
			props: { entry },
		};
	});
};

const { entry } = Astro.props;

const { Content } = await entry.render();
const entries = (await getCollection(entry.collection as never)) as MixedEntry[];
---

<Layout {entry} {entries}>
	<Content />
</Layout>
